{
  "name": "sveltekit-i18n",
  "version": "1.0.0-rc.1",
  "description": "Internationalization library for SvelteKit",
  "type": "module",
  "main": "./lib/index.js",
  "types": "./types/index.d.ts",
  "exports": {
    "import": "./lib/index.js"
  },
  "scripts": {
    "dev": "rollup -c -w",
    "test": "npx jest",
    "build:lib": "rm -rf lib types && rollup -c",
    "build:precompile": "rm -rf precompiled types && tsc",
    "build": "npm run build:precompile && npm run build:lib && rm -rf precompiled",
    "version:rc": "npm version prerelease --preid rc",
    "prepublishOnly": "npm run version:rc && npm run build",
    "lint": "eslint --fix --ext .ts,.js --ignore-path .gitignore ."
  },
  "files": [
    "lib",
    "types"
  ],
  "pre-commit": [
    "lint"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/jarda-svoboda/sveltekit-i18n.git"
  },
  "keywords": [
    "i18n",
    "internationalization",
    "svelte",
    "sveltekit"
  ],
  "author": "Jarda Svoboda",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jarda-svoboda/sveltekit-i18n/issues"
  },
  "homepage": "https://github.com/jarda-svoboda/sveltekit-i18n#readme",
  "peerDependencies": {
    "svelte": "^3.44.3"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.3.0",
    "@types/jest": "^27.0.3",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "eslint": "^8.4.1",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-plugin-import": "^2.25.3",
    "jest": "^27.4.5",
    "rollup": "^2.61.1",
    "rollup-plugin-auto-external": "^2.0.0",
    "rollup-plugin-dts": "^4.0.1",
    "rollup-plugin-terser": "^7.0.2",
    "svelte": "^3.44.3",
    "ts-jest": "^27.1.2",
    "typescript": "^4.5.4"
  }
}